upstream phpfcgi {
    server 127.0.0.1:9000;
}

server {
    listen 80;
    server_tokens off;
 
    server_name {{ domains|join(' ') }};
    root /var/www/{{ site_id }}/web;
 
    error_log /var/log/nginx/{{ site_id }}.error.log;
    access_log /var/log/nginx/{{ site_id }}.access.log combined;
 
    # strip app.php/ prefix if it is present
    rewrite ^/app\.php/?(.*)$ /$1 permanent;
 
    location / {
        index app.php;
        try_files $uri @rewriteapp;
    }
 
    location @rewriteapp {
        rewrite ^(.*)$ /app.php/$1 last;
    }
 
    # pass the PHP scripts to FastCGI server from upstream phpfcgi
    location ~ ^/(app|app_dev|config)\.php(/|$) {
        fastcgi_pass phpfcgi;
        fastcgi_split_path_info ^(.+\.php)(/.*)$;
        include fastcgi_params;
        fastcgi_param  SCRIPT_FILENAME $document_root$fastcgi_script_name;
        fastcgi_param  HTTPS off;
    }
}

{% if ssl %}
server {
    listen 443;
 
    server_name {{ domains|join(' ') }};
    root /var/www/{{ site_id }}/web;
 
    ssl on;
    ssl_certificate /etc/ssl/certs/{{ site_id }}.crt;
    ssl_certificate_key /etc/ssl/private/{{ site_id }}.key;
 
    error_log /var/log/nginx/{{ site_id }}.error.log;

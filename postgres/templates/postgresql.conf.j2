# - Connection Settings -

listen_addresses = '{{ '*' if env_name == 'development' else 'localhost' }}'
max_connections = 100

# - Memory -

shared_buffers = 128MB
dynamic_shared_memory_type = posix

# - Planner Method Configuration -

#enable_bitmapscan = on
#enable_hashagg = on
#enable_hashjoin = on
#enable_indexscan = on
#enable_indexonlyscan = on
#enable_material = on
#enable_mergejoin = on
#enable_nestloop = on
#enable_seqscan = on
#enable_sort = on
#enable_tidscan = on

log_destination = 'stderr'
logging_collector = on
log_directory = 'pg_log'
log_filename = 'postgresql-%a.log'
log_truncate_on_rotation = on
log_rotation_age = 1d
log_rotation_size = 0
log_line_prefix = '< %m >'
log_timezone = '{{ timezone }}'

datestyle = 'iso, iso'
timezone = '{{ timezone }}'

lc_messages = 'en_US.UTF-8'
lc_monetary = '{{ locale_long }}.UTF-8'
lc_numeric = '{{ locale_long }}.UTF-8'
lc_time = '{{ locale_long }}.UTF-8'

default_text_search_config = 'pg_catalog.english'